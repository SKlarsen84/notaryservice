{
    "manifest_version": 2,

    "name": "Concordium Blockchain file notarization",
    "description":
        "Notarize files on the concordium blockchain",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": ["storage"]
}
